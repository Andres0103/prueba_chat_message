# ==================== DATABASE ====================
# Configuración de conexión a base de datos
# SQLite (desarrollo): sqlite:///./chat_messages.db
# PostgreSQL (producción): postgresql://user:password@localhost:5432/chat_db
DATABASE_URL=sqlite:///./chat_messages.db

# ==================== APP ====================
# Nombre de la aplicación
APP_NAME=chat-message-api

# Versión de la aplicación
APP_VERSION=1.0.0

# Modo debug (True para desarrollo, False para producción)
DEBUG=True

# ==================== SERVER ====================
# Host del servidor (0.0.0.0 para todos, 127.0.0.1 solo local)
HOST=0.0.0.0

# Puerto del servidor
PORT=8000

# ==================== LOGGING ====================
# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ==================== SEGURIDAD (Futuro) ====================
# JWT Secret para autenticación (generar con: openssl rand -hex 32)
# SECRET_KEY=tu-clave-secreta-aqui

# ==================== RATE LIMITING (Futuro) ====================
# Límite de requests por minuto
# RATE_LIMIT=60
